<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.romm.connector"
       name="RomM Connector"
       version="1.0.0"
       provider-name="Torresmi9294"
       type="xbmc.python.program"
       minversion="21.0.0">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.program" library="default.py"/>
    <extension point="xbmc.addon.metadata">
        <summary>Connect RomM server to Kodi and launch games via emulators.</summary>
        <description>Browse, download, and launch games from your RomM server with RetroArch or standalone emulators.</description>
        <platform>all</platform>
        <language>en_GB</language>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </extension>
    <extension point="xbmc.addon.configuration">
        <settings>resources/settings.xml</settings>
    </extension>
</addon>